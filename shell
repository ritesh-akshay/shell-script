#while loop example

a=0
while [ $a -lt 10 ]                                     ........or (( $a<10 ))
do                                                    whenever the condition is true then loop will excute
  echo "loop no: $a"
  a=`expr $a + 1`
done
#output#
loop no: 0
loop no: 1
loop no: 2
loop no: 3
loop no: 4
loop no: 5
loop no: 6
loop no: 7
loop no: 8
loop no: 9
************************************************************************************************************
  
#until loop example                                          jab tak $a ki value 10 se badi nahi hoti tab tak loop chalega
                                                              condition true hogayi to woh bahar ajyega ....loop close hoil
  a=0
until [ $a -gt 10 ]                                     ........or (( $a>10 ))
do                                                     until the statement is true loop will get execute
  echo "loop no: $a"
  a=`expr $a + 1`
done

#output#
loop no: 0
loop no: 1
loop no: 2
loop no: 3
loop no: 4
loop no: 5
loop no: 6
loop no: 7
loop no: 8
loop no: 9
loop no: 10
********************************************************************************************************
