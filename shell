#!/bin/bash
#greatest of three number
echo enter three number
read a b c

if [ $a -gt $b -a $a -gt $c ]
then 
	echo $a is greatest
	
elif [ $b -gt $a -a $b -gt $c ]
then

	echo $b is greatest
else
    echo $c is greatest
	
fi
**********************************************************************************
#!/bin/bash
#greatest of two number
echo enter two number
read a b

if [ $a -gt $b ]
then
        echo $a is greatest

elif [ $b -gt $a ]
then

        echo $b is greatest

fi
***************************************************************************************
#!/bin/bash
#swap of two number

echo enter two number
read a
read b

echo "before swap, a=$a and b=$b"
c=$a
a=$b
b=$c

echo "after swap, a=$a and b=$b"
*******************************************************************************************
variable = pointer to your actual data

local variable =limited to that specific script we cant call from outside the script
env variable = we can call that variable from outside the script 
*****************************************#########################################################

#!/bin/bash
#addition two number                      #multiplication \*
a=10                                      #dividation   /
b=20 
value=`expr $a + $b`

echo the addition is $value
**********************************************************************************************************************************
read a
read b


if [ $a == $b ]
then
        echo a equal to b
else
        echo a is not equal b
fi

